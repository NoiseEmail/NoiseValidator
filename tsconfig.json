{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"lib": [
			"ESNext",
			"dom"
		],
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"sourceMap": true,
		"declarationDir": "./dist",
		"allowJs": false,
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": true,
		"types": [
			"bun-types",
			"jest",
		],
		"paths": {
			"noise_validator/src/schema": 		["./src/schema/index.ts"],
			"noise_validator/src/schema/types": ["./src/schema/types.d.ts"],
			"noise_validator/src/route": 		["./src/route/index.ts"],
			"noise_validator/src/route/types": 	["./src/route/types.d.ts"],
			"@server": 		["./src/server/index.ts"],
			"@server/types": ["./src/server/types.d.ts"],
			"noise_validator/src/middleware": 	["./src/middleware/index.ts"],
			"noise_validator/src/middleware/types": ["./src/middleware/types.d.ts"],
			"noise_validator/src/logger": 		["./src/logger/index.ts"],
			"noise_validator/src/logger/types": ["./src/logger/types.d.ts"],
			"noise_validator/src/error": 		["./src/error/index.ts"],
			"noise_validator/src/error/types": 	["./src/error/types.d.ts"],
			"noise_validator/src/binder": 		["./src/binder/index.ts"],
			"noise_validator/src/binder/types": ["./src/binder/types.d.ts"],
		}
	},
	"exclude": [
		"tests/**/*"
	],
	"include": [
		"src/**/*"
	],
	"ts-node": {
		"esm": true
	},
	"lib": [
		"esnext",
	]
}